{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "outDir": "../../dist/apps/admin",
    "paths": {
      "@admin": [
        "./apps/admin"
      ],
      "@admin/*": [
        "./apps/admin/*"
      ],
      "@libs": [
        "./libs/src"
      ],
      "@libs/*": [
        "./libs/src/*"
      ],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"],
}
